{
  "type": "sequence",
  "commands": [
    {
      "type": "navigate",
      "url": "${JobUrl}",
      "waitUntil": "networkidle"
    },
    {
      "type": "ifelse",
      "condition": {
        "type": "exists",
        "selector": "button[data-test='button-submitCookie']",
        "timeout": "1000"
      },
      "then": {
        "type": "click",
        "selector": "button[data-test='button-submitCookie']"
      }
    },
    {
      "type": "ifelse",
      "condition": {
        "type": "exists",
        "selector": "//div[@data-test='section-quick-applying-sidebar']//span[contains(text(), 'Aplikuj szybko')]",
        "timeout": "1000"
      },
      "then": {
        "type": "sequence",
        "commands": [
          {
            "type": "click",
            "selector": "//div[@data-test='section-quick-applying-sidebar']//span[contains(text(), 'Aplikuj szybko')]",
            "waitForTimeoutSeconds": "25"
          },
          {
            "type": "ifelse",
            "condition": {
              "type": "exists",
              "selector": "//h1[contains(text(), 'Pytania od pracodawcy') or contains(text(), 'Formularz aplikacyjny')]"
            },
            "then": {
              "type": "sequence",
              "commands": [
                {
                  "type": "ifelse",
                  "condition": {
                    "type": "exists",
                    "selector": "//button[@data-test='button-submit']",
                    "timeout": "1000"
                  },
                  "then": {
                    "type": "click",
                    "selector": "//button[@data-test='button-submit']",
                    "waitForTimeoutSeconds": "7"
                  }
                },
                {
                  "type": "ifelse",
                  "condition": {
                    "type": "exists",
                    "selector": "//button[@data-test='buttonSubmit-questionnaireForm']",
                    "timeout": "1000"
                  },
                  "then": {
                    "type": "click",
                    "selector": "//button[@data-test='buttonSubmit-questionnaireForm']",
                    "waitForTimeoutSeconds": "7"
                  }
                },
                {
                  "type": "ifelse",
                  "condition": {
                    "type": "exists",
                    "selector": "//title[contains(text(), 'DziÄ™kujemy | Pracuj.pl')]",
                    "timeout": "5000"
                  },
                  "then": {
                    "type": "exit",
                    "success": true
                  },
                  "else": {
                    "type": "exit",
                    "success": false
                  }
                }
              ]
            },
            "else": {
              "type": "exit",
              "success": false
            }
          }
        ]
      },
      "else": {
        "type": "exit",
        "success": false
      }
    }
  ]
}