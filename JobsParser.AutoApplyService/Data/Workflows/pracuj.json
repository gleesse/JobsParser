{
  "type": "sequence",
  "commands": [
    {
      "type": "navigate",
      "url": "${JobUrl}",
      "waitUntil": "networkidle"
    },
    {
      "type": "ifelse",
      "condition": {
        "type": "exists",
        "selector": "button[data-test='button-submitCookie']",
        "timeout": "5000"
      },
      "then": {
        "type": "click",
        "selector": "button[data-test='button-submitCookie']",
        "waitForNavigation": false
      }
    },
    {
      "type": "ifelse",
      "condition": {
        "type": "exists",
        "selector": "//a//span[contains(text(), 'Aplikuj szybko')]",
        "timeout": "5000"
      },
      "then": {
        "type": "sequence",
        "commands": [
          {
            "type": "click",
            "selector": "//a//span[contains(text(), 'Aplikuj szybko')]",
            "waitForNavigation": true
          },
          {
            "type": "genericformfill",
            "configFilePath": "Configurations/potential_form_data.json"
          },
          {
            "type": "click",
            "selector": "//input[@id='future-recruitment-agreement']",
            "waitForNavigation": false
          },
          {
            "type": "click",
            "selector": "//button[@data-test='buttonSubmit-questionnaireForm']",
            "waitForNavigation": false
          }
        ]
      }
    }
  ]
}